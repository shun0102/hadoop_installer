<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

  <property>
    <name>master</name>
    <value><%= ENV['MASTER'] %></value>
  </property>

  <property>
    <name>local.disk</name>
    <value><%= ENV['LOCAL_DISK'] %></value>
  </property>

  <property>
    <name>cpu.num</name>
    <value><%= ENV['CPU_NUM'] %></value>
  </value>

  <property>
    <name>fs.default.name</name>
    <value>hdfs://${master}:9000</value>
  </property>

  <property>
    <name>hadoop.tmp.dir</name>
    <value>${local.disk}/cache/${user.name}</value>
  </property>
</configuration>
